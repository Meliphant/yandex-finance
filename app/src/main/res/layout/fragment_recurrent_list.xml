<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListContainers">

    <TextView
        android:id="@+id/tv_no_recurrent"
        android:text="@string/no_recurrent_payments"
        style="@style/TextViewEmpty" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list_recurrent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recurrent"
        style="@style/Recycler" />
</RelativeLayout>