<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_cardView"
    android:layout_width="280dp"
    android:layout_height="150dp"
    android:layout_centerInParent="true"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/mainBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="2dp">

    <TextView
        android:id="@+id/wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        tools:text="Wallet Name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp">

        <TextView
            android:id="@+id/wallet_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wallet_currency"
            android:layout_marginEnd="-140dp"
            android:layout_toStartOf="@+id/wallet_currency"
            android:textColor="#000"
            android:textSize="30sp"
            tools:text="1234" />

        <TextView
            android:id="@+id/wallet_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30sp"
            tools:text="USD" />

        <TextView
            android:id="@+id/tv_custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="34dp"
            android:text="@string/tv_custom_title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/custom_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-140dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/wallet_currency"
            android:textColor="@color/fab_text_background"
            android:textSize="30sp"
            tools:text="123" />

        <TextView
            android:id="@+id/custom_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_toEndOf="@+id/custom_amount"
            android:layout_marginBottom="16dp"
            android:textColor="@color/cardview_dark_background"
            android:textSize="30sp"
            tools:text="USD" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
