<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    tools:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp"
        android:text="@string/text_new_wallet_header"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_wallet_name"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            tools:text="new account" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp"
        android:text="@string/text_new_wallet_currency"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_currency"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_wallet_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="4dp"
        android:text="@string/text_new_wallet_type"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner_wallet_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent" />
</LinearLayout>